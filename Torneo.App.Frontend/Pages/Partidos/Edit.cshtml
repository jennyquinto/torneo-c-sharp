@page
@model Torneo.App.Frontend.Pages.Partidos.EditModel
@{
}
<h1>Editar partido</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="partido.Id"></label>
        <input asp-for="partido.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="partido.FechaHora"></label>
        <input asp-for="partido.FechaHora" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EquipoLocalSelected">Equipo local</label>
        <select asp-for="EquipoLocalSelected" asp-items="@Model.EquipoLocalOptions" name="idEquipoLocal" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="EquipoVisitanteSelected">Equipo visitante</label>
        <select asp-for="EquipoVisitanteSelected" asp-items="@Model.EquipoVisitanteOptions" name="idEquipoVisitante" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ArbitroSelected">Posicion</label>
        <select asp-for="ArbitroSelected" asp-items="@Model.ArbitroOptions" name="idArbitro" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="EstadioSelected">Estadio</label>
        <select asp-for="EstadioSelected" asp-items="@Model.EstadioOptions" name="idEstadio" class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Actualizar Partido</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
