@page
@model Torneo.App.Frontend.Pages.Estadios.EditModel
@{
}
<h1>Editar estadio</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="estadio.Id"></label>
        <input asp-for="estadio.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="estadio.Nombre"></label>
        <input asp-for="estadio.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="estadio.Direccion"></label>
        <input asp-for="estadio.Direccion" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="estadio.Ciudad"></label>
        <input asp-for="estadio.Ciudad" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Actualizar estadio</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
