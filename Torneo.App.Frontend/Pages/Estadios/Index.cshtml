@page
@model Torneo.App.Frontend.Pages.Estadios.IndexModel
@{
}
@if (Model.ErrorEliminar)
{
    <div class="alert alert-danger" role="alert">No se pudo eliminar el estadio</div>
}
<h1>Listado de Estadios</h1>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadios)
        {
            <tr>
                <th>@estadio.Id</th>
                <td>@estadio.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@estadio.Id">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@estadio.Id">Editar</a>
                    @if (estadio.Partidos.Count == 0)
                    {
                        <form method="post" class="d-inline">
                            <button asp-page-handler="Delete" asp-route-id="@estadio.Id"
                            onclick="return confirm('¿Desea eliminar el estadio?')"
                            class="btn btn-danger">
                            Delete
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-page="./Create">Crear Estadio</a>