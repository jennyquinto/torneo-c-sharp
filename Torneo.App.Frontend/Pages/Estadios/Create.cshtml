@page
@model Torneo.App.Frontend.Pages.Estadios.CreateModel
@{
}
<h1>Nuevo estadio</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="estadio.Nombre"> Introduzca nombre del estadio</label>
        <input asp-for="estadio.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="estadio.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="estadio.Direccion"> Introduzca dirección del estadio</label>
        <input asp-for="estadio.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="estadio.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="estadio.Ciudad"> Introduzca ciudad del estadio</label>
        <input asp-for="estadio.Ciudad" class="form-control">
        <span class="text-danger" asp-validation-for="estadio.Ciudad"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Crear estadio</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>

